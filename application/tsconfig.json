{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "eslint.config.*"
  ],
  "compilerOptions": {
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "allowJs": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "types": ["node"],
    "resolveJsonModule": true
  }
}
